<views:MvxWindowsPage x:Class="FlickrToOneDrive.Views.LoginPage"    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:MvvmCross.Platforms.Uap.Views"
    xmlns:local="using:FlickrToOneDrive.Views"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlPageBackgroundBaseLowBrush}"        
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <local:Header />
            <StackPanel>
                <TextBlock Style="{StaticResource Heading}">Instructions</TextBlock>
                <TextBlock Style="{StaticResource Message}">
                    Please click the buttons bellow to login to both Flickr and OneDrive. Once finished the processing will continue.
                </TextBlock>
                <Button Style="{StaticResource Button}" Command="{Binding SourceLoginCommand}">Login to Flickr</Button>
                <Button Style="{StaticResource Button}" Command="{Binding DestinationLoginCommand}">Login to OneDrive</Button>
            </StackPanel>
        </StackPanel>
        <local:Footer Grid.Row="1"/>
    </Grid>
</views:MvxWindowsPage>