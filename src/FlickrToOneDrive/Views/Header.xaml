<UserControl
    x:Class="FlickrToCloud.Views.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Horizontal" Background="{ThemeResource SystemChromeMediumColor}" >
        <Image Stretch="UniformToFill" Height="42" Width="42" Margin="22 22 20 22" Source="/Assets/logo.png"></Image>
        <TextBlock 
            HorizontalTextAlignment="Center" 
            VerticalAlignment="Center"
            FontSize="22"
            FontWeight="Normal"
            FontFamily="Sergoe UI"
            Foreground="{ThemeResource ApplicationForegroundThemeBrush}">
            Flickr To Cloud
        </TextBlock>
    </StackPanel>

</UserControl>